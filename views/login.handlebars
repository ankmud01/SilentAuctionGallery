<div class="row">
  <div class="col s12 m12 l12">
    <div class="card" id="loginCard">
      <div class="card-content">
        <!-- Navbar goes here -->

        <!-- Page Layout here -->
        <div class="row">

          <div class="col s6 m7 l7">
            <img class="responsive-img loginPic"
              src="https://i.pinimg.com/564x/39/c1/f6/39c1f6e54cc6e87569c00c91d035bb6c.jpg">
          </div>

          <div class="col s6 m5 l5">
            <div class="row">
              <div class="col s9 m9 l9">
                <div class="card" id="loginCard2">
                  <div class="card-content">
                    <h2>Member Login</h2>
                    <h3 id="create-err-msg"></h3>

                    <h3 id="err-msg"></h3>

                    <div class="card-content">
                      <div class="container loginForm">
                        <div class="row">
                          <div class="col-md-6 col-md-offset-3">

                            <form class="login">
                              <div class="form-group">
                                <i class="material-icons prefix">email</i>
                                <label for="exampleInputEmail1"></label>
                                <input type="email" class="form-control validate" required="" aria-required="true"
                                  id="email-input" placeholder="Email">
                              </div>
                              <div class="form-group">
                                <i class="material-icons prefix">lock</i>
                                <label for="exampleInputPassword1"></label>
                                <input type="password" class="form-control" id="password-input" placeholder="Password">
                              </div>
                              <br>
                              <button type="submit" class="btn btn-default red darken-4" id="logInButton">Login</button>
                            </form>
                            <br />
                            <p>Or sign up <a href="/signup">here</a></p>
                          </div>
                        </div>
                      </div>
                    </div>

                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
