<body>
  <nav class="navbar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="row">
      <div class ="col-md-6 col-md-offset-3">
      <h2>Signup Form</h2>
      <form class="signup">
        <div class="row">
          <div class="form-group col s6">
            <label for="first_name">First Name</label>
            <input placeholder="First Name" id="firstname-input" type="text" class="validate">
          </div>
          <div class="form-group col s6">
            <label for="last_name">Last Name</label>
            <input placeholder="Last Name" id="lastname-input" type="text" class="validate">          
          </div>
        </div>
        <div class="row">
          <div class="form-group col s6">
            <label for="email">Email</label>
            <input placeholder="Email Id" id="email-input" type="text" class="validate">
          </div>
          <div class="form-group col s6">
            <label for="phonenumber">Phone Number</label>
            <input placeholder="Phone Number" id="phone-input" type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="form-group col s12">
            <label for="password">Password</label>
            <input placeholder="Password" id="password-input" type="password" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="form-group col s12">
            <label for="address">Address</label>
            <input placeholder="Address" id="address-input" type="text" class="validate">          
          </div>
        </div>
        <div class="row">
          <div class="form-group col s12">
            <label for="address2">Address2</label>
            <input placeholder="Address2" id="address2-input" type="text" class="validate">    
          </div>
        </div>
        <div class="row">
          <div class="form-group col 4">
            <label for="city">City</label>
            <input placeholder="City" id="city-input" type="text" class="validate">           
          </div>
          <div class="form-group col 4">
            <label for="state">State</label>
            <input placeholder="State" id="state-input" type="text" class="validate">         
          </div>
          <div class="form-group col 4">
            <label for="zipcode">Zip Code</label>
            <input placeholder="Zip Code" id="zipcode-input" type="text" class="validate">           
          </div>
        </div>
        <div class="row">
          <div class="form-group col s12">
            <label for="school">School Name</label>
            <input placeholder="School Name" id="school-input" type="text" class="validate">           
          </div>
        </div>
        <div style="display: none" id="alert" class="alert alert-danger" role="alert">
          <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
          <span class="sr-only">Error:</span> <span class="msg"></span>
        </div>
          <button type="submit" class="btn btn-default">Sign Up</button>
      </form>
      </div>
        <br />
        <p>Or Log In <a href="/login">here</a></p>      
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <script type="text/javascript" src="/js/signup.js"></script>

</body>