        <h2>Welcome, {{userInfo.first_name}} {{userInfo.last_name}}</h2>
        <form class="signup col s12 m12 l12">
          <div class="row">
            <div class="input-field col s6">
              <input id="account_id" type="text" value="{{userInfo.id}}">
              <label for="id">Account ID</label>
            </div>
            <div class="input-field col s6">
              <input placeholder="First Name" id="firstname-input" type="text" value="{{userInfo.first_name}}">
              <label for="first_name">Full Name*</label>
            </div>
            <div class="input-field col s6">
              <input id="lastname-input" type="text" value="{{userInfo.last_name}}">
              <label for="last_name">Last Name</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="address-input" type="text" value="{{userInfo.address}}">
              <label for="address">Address</label>
            </div>
            <div class="input-field col s6">
              <input id="address2-input" type="text" "{{userInfo.address2}}">
              <label for="address2">Address2</label>
            </div>
          </div>

          <div class="row">
            <div class="input-field col s6">
              <input id="city-input" type="text" value="{{userInfo.city}}">
              <label for="city">City</label>
            </div>

            <div class="input-field col s6">
              <input id="state-input" type="text" value="{{userInfo.state}}">
              <label for="state">State</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="zipcode-input" type="text" value="{{userInfo.zip}}">
              <label for="zipCode">Zip Code</label>
            </div>

            <div class="input-field col s6">
              <input id="phone-input" type="text" value="{{userInfo.phone}}">
              <label for="phoneNumber">Tel Number</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="email-input" type="email" value="{{userInfo.email}}">
              <label for="email">Email</label>
            </div>

            <div class="input-field col s6">
              <input id="password-input" type="password" value="{{userInfo.password}}">
              <label for="password">Password</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s6">
              <input id="school-input" type="text" value="{{userInfo.school}}">
              <label for="school">School</label>
            </div>
          </div>
          <button type="submit" class="btn btn-default red darken-4" id="updateButton">UPDATE</button>
          <button type="submit" data-target="delete-account-modal" class="btn btn-default red darken-4 modal-trigger" id="deleteButton">DELETE</button>
          <button type="submit" class="btn btn-default red darken-4" id="refreshButton">REFRESH</button>
        </form>
