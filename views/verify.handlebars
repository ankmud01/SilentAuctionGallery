<div class="row">
    <div class="col s12 m12 l12">
        <div class="card" id="loginCard">
            <div class="card-content">
                <!-- Navbar goes here -->

                <!-- Page Layout here -->
                <div class="row">

                    <div class="col s6 m7 l7">
                        <img class="responsive-img loginPic"
                            src="https://i.pinimg.com/564x/39/c1/f6/39c1f6e54cc6e87569c00c91d035bb6c.jpg">
                    </div>

                    <div class="col s6 m5 l5">
                        <div class="row">
                            <div class="col s9 m9 l9">
                                <div class="card" id="loginCard2">
                                    <div class="card-content">
                                        <h2>Account Verification</h2>
                                        <div class="card-content">
                                            <div class="container tokenForm">
                                                <div class="row">
                                                    <div class="col-md-6 col-md-offset-3">
                                                        <form class="form-token">
                                                            <div class="form-group">
                                                                <label for="secretToken">
                                                                    <h5 style="color:blue;">Paste Secret Token Below
                                                                    </h5>
                                                                </label>
                                                                <input type="text" class="form-control" id="secretToken"
                                                                    placeholder="Paste Secret Token Here" required
                                                                    autofocus>
                                                            </div>
                                                            <p>You Entered:</p>
                                                            <span id="token" type="text" value="{{token}}"></span>
                                                            <br>

                                                            <br>
                                                            <button type="submit" data-target="verified-token-modal"
                                                                class="btn btn-default red darken-4 modal-trigger"
                                                                id="verifyTokenBtn">Verify</button> <i
                                                                class="material-icons prefix">done</i>
                                                        </form>
                                                        <br />
                                                        <p><a href="/signup">Or sign up here</a></p>
                                                    </div>
                                                    <!-- Modal Trigger -->
                                                    <div id="verified-token-modal" class="modal">
                                                        <div class="modal-content">
                                                            <h4>Confirmation</h4>
                                                            <div class="modal-header">
                                                                <h6> You have Verified this email.</h6>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit"
                                                                    class="btn btn-default green darken-4"
                                                                    id="confirm-token">Return to Silent Auction
                                                                    Gallery</button>
                                                                <button type="submit"
                                                                    class="btn btn-default red darken-4"
                                                                    id="cancel">CANCEL</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>